<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appenders>
        <console name="stdout" target="SYSTEM_OUT">
            <patternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level - %m%n" />
        </console>
    </appenders>

    <loggers>
        <root level="info">
            <AppenderRef ref="stdout" level="INFO"/>
        </root>
    </loggers>
</configuration>